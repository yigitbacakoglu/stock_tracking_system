<% if target && target.errors.any? %>
    <div id="errorExplanation" class="errorExplanation" data-hook>
      <h5><%= t(:errors_prohibited_this_record_from_being_saved, :count => target.errors.count) %>:</h5>
      <p><%= t(:there_were_problems_with_the_following_fields) %>:</p>
      <ul>
        <% target.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>